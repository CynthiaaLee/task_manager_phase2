<h1>Login</h1>

<% if flash[:alert] %>
  <div class="error-message">
    <p><%= flash[:alert] %></p>
  </div>
<% end %>

<%= form_with url: login_path, method: :post, local: true do |f| %>
  <div>
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, required: true %>
  </div>

  <div>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password, required: true %>
  </div>

  <%= f.submit "Login" %>
<% end %>

<%= link_to "Sign Up", signup_path %>
